<div class="container">
  <p class="notice"><%= notice %></p>

  <h1>Listing Posts</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Date published</th>
        <th>Content</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= post.author %></td>
          <td><%= post.date_published.try(:strftime, '%m-%d-%Y %-l:%M%P') %></td>
          <td><%= post.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
</div>