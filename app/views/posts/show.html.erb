<div class="container post-dsp">
  <p class="notice"><%= notice %></p>

  <h2><%= @post.title %></h2>

  <p>
    posted by <%= @post.author %>
  </p>

  <p>
    on <%= @post.date_published.try(:strftime, '%m-%d-%Y %-l:%M%P') %>
  </p>

  <p class="post-content">
    <%= @post.content %>
  </p>

  <%= render 'replies', comments: @comments %>

  <h2> New Reply </h2>
  <%= render 'comments/form' %>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
  </div>